<h1>Listing blackmails</h1>

<table>
  <tr>
    <th>User</th>
    <th>Attachment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% current_user.blackmails.each do |blackmail| %>
  <tr>
    <td><%= blackmail.user %></td>
    <td><%= image_tag blackmail.attachment.url(:standard).gsub(/s3[.]/, "s3-us-west-2.") %></td>
    <td><%= link_to 'Show', blackmail %></td>
    <td><%= link_to 'Edit', edit_challenge_path(blackmail) %></td>
    <td><%= link_to 'Destroy', blackmail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Blackmail', new_blackmail_path %>
