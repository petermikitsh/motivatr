 <h2><%= @challenge.name %></h2>
  <div class="row">
    <div class="col-sm-6"><h4>Group: <%= @challenge.group.id %></h4></div>
    <div class="col-sm-6"><h4>End Time: <%= @challenge.end.strftime("%-m/%-d/%y %l:%M %p") %></h4></div>
  </div>

  <div class="spacer10">
    <p>
    </p>
  </div>
  <h4 class="spacer15">Participant Stats</h4>
  <div class="panel panel-default spacer10">
    <!-- Default panel contents -->
    <!-- <div class="panel-heading">Participant Stats</div> -->

    <!-- Table -->
    <table class="table">
     <thead>
      <tr>
        <th>Name</th>
        <th>Actions Completed</th>
      </tr>
     </thead>
     <tbody>
     	<% Action.where(challenge_id: @challenge.id).each do |action| %>
          <tr>
            <td><%= action.user.name %></td>
            <td><%= action.count %> / 1</td>
          </tr>
        <% end %>
     </tbody>
    </table>
  </div>

<%= link_to 'Back', challenges_path %>
