<legend><h2>My Challenges</h2></legend>

<% current_user.groups.each do |group| %>
  <% group.challenges.each do |challenge| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
            <strong>Name: <%= challenge.name %></strong>
        </h4>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-6"><strong>Members: </strong><%= challenge.group.users.map(&:name).to_sentence %></div>
          <div class="col-sm-6"><strong>Time Remaining: </strong><%= time_ago_in_words(challenge.end) %></div>
        </div>
        <div class="spacer10">
          Description: <%= challenge.description %>
        </div>
        <div class="spacer10 row">
        <div class="col-xs-6 col-sm-3"><%= button_to 'Check In', action="check_in", class: 'btn btn-success btn-block' %></div>
        <div class="col-xs-6 col-sm-3"><%= button_to 'Details', challenge, method: :get, class: 'btn btn-primary btn-block' %></div>
      </div>
      </div>
    </div>
    <% end %>
<% end %>
